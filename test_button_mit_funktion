import tkinter as tk

def aktionSF():
    label3 = tk.Label(root, text="Aktion durchgeführt", bg="yellow")
    label3.pack()

root = tk.Tk()

label1 = tk.Label(root, text="Hallo Welt", bg="orange")
label1.pack()

schaltf1 = tk.Button(root, text="Aktion durchführen", command=aktionSF)
schaltf1.pack()

root.mainloop()
